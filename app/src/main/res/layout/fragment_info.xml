<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.ebs.zunderapp.Wallet.WalletInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/balance4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="@string/balance"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/profileHRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="196dp">

            </LinearLayout>

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto"
                android:text="Balance"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/profileHRule2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="196dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="10"
                    android:background="#ddd" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/qrWallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="shit"
                app:srcCompat="@drawable/qr" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/profileHRule3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/balance2"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="196dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="10"
                    android:background="#ddd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileHRule4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/arrowToWallet"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="196dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="10"
                    android:background="#ddd" />

            </LinearLayout>

            <TextView
                android:id="@+id/balance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/roboto"
                android:text="@string/adress"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/walletAddress"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_above="@+id/arrowToWallet"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textIsSelectable="true" />

            <ImageView
                android:id="@+id/arrowToWallet"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/walletAddress"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/walletAddress"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:tint="@android:color/black"
                app:srcCompat="@drawable/arrow" />

            <TextView
                android:id="@+id/walletSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/arrowToWallet"
                android:layout_marginEnd="64dp"
                android:layout_marginRight="64dp"
                android:layout_toLeftOf="@+id/arrowToWallet"
                android:layout_toStartOf="@+id/arrowToWallet"
                android:text="@string/sett"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/gearWallet"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/walletSet"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                app:srcCompat="@drawable/gear" />

        </RelativeLayout>

    </LinearLayout>

