                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="zunder.ebs.zunderapp.Wallet.Wallet" />
        <activity android:name="zunder.ebs.zunderapp.Utils.Login" />

        <meta-data
            android:name="preloaded_fonts"
