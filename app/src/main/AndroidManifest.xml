        <activity android:name="zunder.ebs.zunderapp.Profile.Profile" />
        <activity android:name="zunder.ebs.zunderapp.Wallet.WalletInfo" />
        <activity android:name="zunder.ebs.zunderapp.Utils.ScanQR" />
        <activity android:name="zunder.ebs.zunderapp.Wallet.WalletSettings" />
        <activity android:name="zunder.ebs.zunderapp.Map.MapActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBrPzA7_DTu9-8mbp59bbFyruNWMLTAsBc" />

        <activity android:name="zunder.ebs.zunderapp.Map.CompanyProfile" />
